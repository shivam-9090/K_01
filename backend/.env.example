# Application
NODE_ENV=production
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/auth_db
DB_USER=auth_user
DB_PASSWORD=change_this_password_in_production
DB_NAME=auth_db
DB_PORT=5432

# Redis (Rate Limiting - Required)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_this_redis_password_in_production

# JWT Configuration (Use short expiry for security)
JWT_SECRET=change_this_to_a_strong_secret_key_minimum_32_characters
JWT_EXPIRATION=900
JWT_REFRESH_EXPIRATION=604800

# 2FA Security
TWOFA_ENCRYPTION_KEY=generate_with_openssl_rand_base64_32
TOTP_WINDOW=2

# Rate Limiting
THROTTLE_LIMIT=10
THROTTLE_TTL=60000

# CORS (Restrict to your domains)
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Email Service
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@example.com
FRONTEND_URL=http://localhost:3000

# SMTP Configuration (for generic SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_password

# SendGrid Configuration (Alternative)
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=your_sendgrid_api_key

# AWS SES Configuration (Alternative)
# EMAIL_PROVIDER=aws-ses
# AWS_REGION=us-east-1
# AWS_SES_USER=your_ses_user
# AWS_SES_PASSWORD=your_ses_password

# Resend Configuration (Alternative)
# EMAIL_PROVIDER=resend
# RESEND_API_KEY=your_resend_api_key

# SSL/HTTPS
SSL_KEY_PATH=./certs/server.key
SSL_CERT_PATH=./certs/server.crt

# 2FA Encryption (base64 32 bytes)
TWOFA_ENCRYPTION_KEY=base64-encoded-32-byte-key

# Monitoring & Logging
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-secure-grafana-password-change-this
